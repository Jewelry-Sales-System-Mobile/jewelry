<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma-rtl.min.css"
    />
    <link rel="stylesheet" href="/css/form.css" />

    <title>Edit Sections</title>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="https://bulma.io">
          <img
            src="https://bulma.io/images/bulma-logo.png"
            width="112"
            height="28"
          />
        </a>

        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" href="/sections">Sections</a>
          <a class="navbar-item" href="/sections/add-section">Add</a>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <a href="/users/logout" class="button is-light">Log out</a>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main class="section">
      <div class="container">
        <form
          class="box"
          action="/sections/<% if (editing) { %>edit-section<% } else { %>add-section<% } %>"
          method="POST"
        >
          <div class="field">
            <label class="label" for="title">Name</label>
            <div class="control">
              <input
                class="input"
                type="text"
                name="sectionName"
                required
                id="title"
                pattern="[A-Za-z0-9\s/]+"
                title="Section name must only contain letters, digits, spaces, and slashes."
                value="<% if (editing) { %><%= section.sectionName %><% } %>"
              />
            </div>
          </div>

          <div class="field">
            <label class="label" for="imageUrl">Description</label>
            <div class="control">
              <textarea
                class="textarea"
                name="sectionDescription"
                id="imageUrl"
                rows="5"
                required
              >
<% if (editing) { %><%= section.sectionDescription %><% } %></textarea
              >
            </div>
          </div>

          <div class="field">
            <label class="label" for="price">Duration</label>
            <div class="control">
              <input
                class="input"
                type="number"
                name="duration"
                id="price"
                value="<% if (editing) { %><%= section.duration %><% } %>"
              />
            </div>
            <span class="help">min</span>
          </div>
          <div class="field">
            <label class="checkbox label" for="isMainTask">
              <input type="checkbox" id="isMainTask" name="isMainTask"
              role="switch" class="switch" <% if (typeof section !== 'undefined'
              && section.isMainTask) { %>checked<% } %> /> isMainTask
            </label>
          </div>
          <div class="field">
            <label class="label" for="courseId">Course</label>
            <div class="control">
              <div class="select is-fullwidth">
                <select id="courseId" name="courseId" required>
                  <option value="">Select a Course</option>
                  <% courses.forEach(function(course) { %>
                  <option value="<%= course._id %>" <% if (editing) { %>
                    <% if (section.course.toString() === course._id.toString())
                    { %> selected <% } %> <% } %>> <%= course.courseName %>
                  </option>
                  <% }); %>
                </select>
              </div>
            </div>
          </div>

          <% if (editing) { %>
          <input type="hidden" value="<%= section._id %>" name="sectionId" />
          <% } %>

          <div class="control">
            <button class="button is-primary" type="submit">
              <% if (editing) { %>Update Section<% } else { %>Add Section<% } %>
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.querySelector("form");
      const sectionNameInput = document.getElementById("title");

      form.addEventListener("submit", function (event) {
        const sectionNames = sectionNameInput.value.split(/\s+/);
        const isValidCapitalization = sectionNames.every(
          (name) => name.charAt(0) === name.charAt(0).toUpperCase()
        );

        if (!isValidCapitalization) {
          event.preventDefault(); // Stop form submission
          alert("Each word in Section Name must begin with a capital letter.");
          sectionNameInput.focus();
        }
      });
    });
  </script>
</html>
