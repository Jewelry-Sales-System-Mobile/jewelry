<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma-rtl.min.css"
    />
    <link rel="stylesheet" href="/css/product.css" />
    <title>Sections</title>
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="https://bulma.io">
          <img
            src="https://bulma.io/images/bulma-logo.png"
            width="112"
            height="28"
          />
        </a>

        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" href="/sections">Sections</a>
          <a class="navbar-item" href="/sections/add-section">Add</a>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <a href="/users/logout" class="button is-light">Log out</a>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <% if (sects.length > 0) { %>
      <div class="grid">
        <% for (let section of sects) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1
              class="product__title <%= section.isMainTask ? 'is-main-task' : '' %>"
            >
              Section Name: <%= section.sectionName %>
            </h1>
          </header>
          <% if (section.course) { %>
          <h2 class="product__price">
            Course: <%= section.course.courseName %>
          </h2>
          <% } %>

          <div class="card__content">
            <h2 class="product__price">
              Description: <%= section.sectionDescription %>
            </h2>
            <p class="product__description">
              Duration: <%= section.duration %>
            </p>
          </div>
          <div class="card__actions">
            <a
              href="/sections/edit-section/<%= section._id %>?edit=true"
              class="btn"
              >Edit</a
            >
            <form
              action="/sections/delete-product"
              method="POST"
              onsubmit="return confirmDelete()"
            >
              <input
                type="hidden"
                value="<%= section._id %>"
                name="sectionId"
              />
              <button class="btn" type="submit">Delete</button>
            </form>
          </div>
        </article>
        <% } %>
      </div>
      <% } else { %>
      <h1>No Sections Found!</h1>
      <% } %>
    </main>
  </body>
  <script>
    function confirmDelete() {
      return confirm("Are you sure you want to delete this section?");
    }
  </script>
</html>
